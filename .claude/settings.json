{
  "$schema": "https://claude.ai/schemas/settings.json",
  "_comment": "Reference Claude Code settings for experienced developers. Customize as needed.",

  "model": {
    "default": "claude-sonnet-4-20250514",
    "_alternatives": ["claude-opus-4-20250514", "claude-haiku-3-5-20241022"]
  },

  "permissions": {
    "allowedTools": [
      "Read", "Glob", "Grep", "Bash", "Write", "Edit",
      "WebFetch", "WebSearch", "Task", "TodoWrite", "NotebookEdit"
    ],
    "allow": [
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "Bash(bun *)",
      "Bash(node *)",
      "Bash(tsx *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(uv *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "Bash(make *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git stash*)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git merge *)",
      "Bash(git rebase *)",
      "Bash(git cherry-pick *)",
      "Bash(git worktree *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh repo *)",
      "Bash(docker compose *)",
      "Bash(docker build *)",
      "Bash(docker run *)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(kubectl get *)",
      "Bash(kubectl describe *)",
      "Bash(kubectl logs *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(jq *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(env)",
      "Bash(printenv *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo rm *)",
      "Bash(chmod 777 *)",
      "Bash(:(){ :|:& };:)",
      "Bash(> /dev/sda)",
      "Bash(mkfs.*)",
      "Bash(dd if=*)"
    ]
  },

  "context": {
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      ".next/**",
      ".nuxt/**",
      ".output/**",
      "coverage/**",
      ".nyc_output/**",
      "__pycache__/**",
      "*.pyc",
      ".venv/**",
      "venv/**",
      "vendor/**",
      "target/**",
      "*.lock",
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml",
      "*.min.js",
      "*.min.css",
      "*.map",
      "*.log",
      ".DS_Store",
      "Thumbs.db"
    ],
    "includePatterns": [
      "src/**",
      "lib/**",
      "app/**",
      "pages/**",
      "components/**",
      "hooks/**",
      "utils/**",
      "services/**",
      "api/**",
      "tests/**",
      "test/**",
      "__tests__/**",
      "*.config.*",
      "*.json",
      "*.md",
      "*.yml",
      "*.yaml",
      "Dockerfile*",
      "docker-compose*",
      "Makefile"
    ]
  },

  "env": {
    "EDITOR": "code --wait",
    "NODE_ENV": "development"
  }
}
